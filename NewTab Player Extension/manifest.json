{
  "manifest_version": 2,
  "name": "NewTab Player",
  "version": "0.1",

  "description": "Change NewTab to a page which allows the users more usability",

  "icons": {
    "18": "icon/music_18dp_2x.png",
    "48": "icon/music_48dp_2x.png"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "background": {
    "scripts": ["main.js"]
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",  

  "permissions": [
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "tabs",
    "activeTab",
    "bookmarks",
    "geolocation",
    "notifications",
    "storage",
    "unlimitedStorage"
  ]
}